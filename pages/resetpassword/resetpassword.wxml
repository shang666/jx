<form bindsubmit="getRegister">
    <view class="Registerbox">
        <view class="phone_pass clearfix">
            <image src="../img/password.png" class="fl"></image>
            <input class="{{close}} fl" type="password" placeholder="密码"  name="password" maxlength="15" value="{{blurvalue}}" bindblur="getvalue"/>
            <input class="{{open}} fl" type="text" placeholder="密码"  maxlength="15" value="{{blurvalue}}" bindblur="getvalue"/>
            <image class="fr {{open}}" src="../img/icon_show_password.png" style="width:40rpx;" bindtap="aboutEye"></image>
            <image class="fr {{close}}" src="../img/icon_yc_password.png" style="width:40rpx;" bindtap="aboutEye"></image>
        </view>      
    </view>
    <button formType="submit">确定</button>
</form>
